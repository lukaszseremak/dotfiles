#!/usr/bin/env bash
set -eo pipefail

if [ $VIRTUAL_ENV ]; then
	echo "VIRTUAL_ENV: ${VIRTUAL_ENV} was detected."
else
	echo "Did not found any VIRTUAL_ENV. There is nothing to do there"
	exit 0
fi

pip install pynvim

project_venv=$(basename $VIRTUAL_ENV)
jq -n --arg venv_path "/home/seremak/.pyenv/versions/" --arg project_venv "$project_venv" '{"venvPath": $venv_path, "venv": $project_venv}' >pyrightconfig.json

echo "File: pyrightconfig.json was created succesfully."
